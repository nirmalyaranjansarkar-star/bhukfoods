rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for the public gallery photos
    match /gallery/{allPaths=**} {
      // Allow anyone to read (view) the photos
      allow read;
      
      // Only allow authenticated users to write (upload, update, delete)
      // This protects your storage from unauthorized uploads.
      allow write: if request.auth != null;
    }

    // You can add rules for other paths here if needed
  }
}
